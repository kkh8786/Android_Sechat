        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/sechat_red" />

        <RadioButton
            android:id="@+id/burn_mode_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
