<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_incoming_call_caller_picture"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/activity_incoming_call_caller_name"
        style="?android:textAppearanceLarge"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/activity_incoming_call_participants_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/activity_incoming_call_decline_call"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/activity_incoming_call_decline_call"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/activity_incoming_call_accept_call"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/activity_incoming_call_accept_call"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>